{
    "eslint.enable": false,
    "jshint.enable": false,
    "tslint.enable": true,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true
    },
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*.js": { "when": "$(basename).ts" },
        "**/*.map": { "when": "$(basename).js" }
    }
}
